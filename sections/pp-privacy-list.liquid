{% comment %}
    Section: Privacy Policy
{% endcomment %}

<div class="privacy-policy">
  <div class="container-limited --flex-column">
    <div class="privacy-policy__content --flex-column">
      <h1 class="--all-caps"
          data-aos="fade-up"
          data-aos-delay="100">{{ section.settings.heading }}</h1>
      {% for paragraph in section.blocks %}
        <p data-aos="fade-up"
           data-aos-delay="200">{{ paragraph.settings.text }}</p>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Privacy Policy",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Zugu “In Case of Death” Ring<br/>Privacy Policy"
    }
  ],
  "blocks": [
    {
      "type": "privacy_policy_paragraph",
      "name": "Privacy Policy Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Paragraph Text",
          "default": "Introduction"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Policy"
    }
  ]
}
{% endschema %}
